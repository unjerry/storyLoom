{
    "[plaintext]": {
        "editor.wrappingIndent": "none",
        "editor.autoIndent": "none",
        "editor.wordWrap": "bounded"
    },
    // 用户自定义高亮，按照正则表达式匹配
    // 键为正则表达式，值为高亮配置，结构为 DecorationRenderOptions
    "noveler.customHighlight": {
        "\\d+(\\.\\d+)?": {
            "color": "#23e40a"
        },
        "《.*?》": {
            "color": "#8482e4"
        },
        "「.*?」": {
            "color": "#84e2ff"
        },
        "“.*?”": {
            "color": "#84e2ff"
        },
    },
    "noveler.confCSVFiles": [
        {
            "suggestPrefix": "elf",
            // 提示种类名，影响提示的图标
            "suggestKind": "Method",
            // 文件路径（相对路径只在打开单文件夹时才会读取）
            "path": ".vscode/elirian.csv",
            // 要高亮的列名，默认为 name
            "key": "key",
            // 悬挂提示的列名，不写则无悬挂信息，无默认值
            "hoverKey": "hoverKey",
            // 高亮配置，结构为DecorationRenderOptions
            "decorationRenderOptions": {
                "color": "#00e1ac"
            }
        },
    ],
    "noveler.previewFontSize": 20,
    "noveler.previewIndentionLength": 7,
    "noveler.completionChar": "@",
    "noveler.previewSpaceLines": 1,
    "noveler.outlinesDir": "./outlines",
}